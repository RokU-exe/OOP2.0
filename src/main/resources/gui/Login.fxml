<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.LoginController">
    <Label text="Insurance Claims Management System" style="-fx-font-size: 18pt;" />
    <HBox spacing="10">
        <Label text="Email:" />
        <TextField fx:id="emailField" />
    </HBox>
    <HBox spacing="10">
        <Label text="Password:" />
        <PasswordField fx:id="passwordField" />
    </HBox>
    <Button text="Login" onAction="#handleLogin" />
</VBox>
